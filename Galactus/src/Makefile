include ../Makefile.inc

APP_NAME=galactus
BASE_LIB_NAME=lib$(APP_NAME)
LIB_STATIC=$(BASE_LIB_NAME).a
LIB_DYN=$(BASE_LIB_NAME).0.0.1

all: $(APP_NAME) $(LIB_STATIC) $(LIB_DYN)

$(APP_NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(INC_PATH) -o $(BIN_PATH)/$(APP_NAME) main.cpp $(OBJS) $(LIBS)

$(LIB_STATIC):
	$(RULE_LIB_STATIC)

$(LIB_DYN):
	$(RULE_LIB_DYN)

clean:
	$(RULE_CLEAN_FILES)
